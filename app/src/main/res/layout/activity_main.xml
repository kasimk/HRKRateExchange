<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="info.kasimkovacevic.hrkrateexchange.activities.MainActivity">

    <info.kasimkovacevic.hrkrateexchange.views.CustomViewPager
        android:id="@+id/vp_rate_exchange"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bnv_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimaryDark"
        app:itemIconTint="@drawable/bottom_navigation_color_state"
        app:itemTextColor="@drawable/bottom_navigation_color_state"
        app:menu="@menu/bottom_navigation_main" />

</RelativeLayout>
